    "version": "0.2.0",
    "configurations": [
        {
            "name": "TarotApp",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/tarot-app",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/envfile",
            "args": [
                "--config",
                "${workspaceFolder}/tarot_app_config.toml"
            ],
            "showLog": true,
            "trace": "log"
        },
        {
            "name": "TarotAdminApp",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/tarot-admin-app",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/envfile",
            "args": [
                "--config",
                "${workspaceFolder}/tarot_admin_config.toml"
            ],
            "showLog": true,
            "trace": "log"
        },
    ]
}